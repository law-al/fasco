# Environment
NODE_ENV=development         # or production
PORT=5000                   # API server port

# Database
DB_URI=your_mongodb_uri_here

# Email (Mailtrap example)
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your_mailtrap_user
MAIL_PASS=your_mailtrap_pass

# Session Expiry (in milliseconds)
USER_SESSION_MAX_AGE=86400000        # 1 day
GUEST_SESSION_MAX_AGE=600000         # 10 minutes

# AI Integration
OPENAI_API_KEY=your_openai_or_claude_api_key

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_KEY=your_stripe_webhook_key
